<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sulu_search.event_subscriber.content_mapper.class">Sulu\Bundle\SearchBundle\EventSubscriber\ContentMapperSubscriber</parameter>
        <parameter key="sulu_search.event_subscriber.blame_timestamp.class">Sulu\Bundle\SearchBundle\EventSubscriber\BlameTimestampSubscriber</parameter>
        <parameter key="sulu_search.event_listener.search.class">Sulu\Bundle\SearchBundle\EventListener\SearchListener</parameter>
        <parameter key="sulu_search.event_listener.reindex.class">Sulu\Bundle\SearchBundle\EventListener\ReindexListener</parameter>
        <parameter key="sulu_search.controller.search.class">Sulu\Bundle\SearchBundle\Controller\SearchController</parameter>
        <parameter key="sulu_search.search.factory.class">Sulu\Bundle\SearchBundle\Search\Factory</parameter>
    </parameters>

    <services>
        <!-- Controller -->
        <service id="sulu_search.controller.search" class="%sulu_search.controller.search.class%">
            <argument type="service" id="massive_search.search_manager" />
            <argument type="service" id="fos_rest.view_handler" />
        </service>

        <!-- Custom factory -->
        <service id="sulu_search.search.factory" class="%sulu_search.search.factory.class%" />

        <!-- Node save event subscriber -->
        <service id="sulu_search.event_subscriber.content_mapper" class="%sulu_search.event_subscriber.content_mapper.class%">
            <argument type="service" id="massive_search.search_manager" />
            <argument type="service" id="sulu.phpcr.session" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Blame and Timestamp subscriber -->
        <service id="sulu_search.event_subscriber.blame_timestamp" class="%sulu_search.event_subscriber.blame_timestamp.class%">
            <argument type="service" id="massive_search.factory" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Search event to be sure that all structures are loaded (generated) -->
        <service id="sulu_search.event_listener.search" class="%sulu_search.event_listener.search.class%">
            <argument type="service" id="sulu.content.structure_manager" />
            <tag name="kernel.event_listener" event="massive_search.search" method="onSearch" />
        </service>

        <!-- Rebuild structure index on massive:search:index:rebuild -->
        <service id="sulu_search.event_listener.search" class="%sulu_search.event_listener.reindex.class%">
            <argument type="service" id="sulu.phpcr.session" />
            <argument type="service" id="sulu.content.mapper" />
            <argument type="service" id="massive_search.search_manager" />
            <argument type="service" id="sulu_core.webspace.webspace_manager" />
            <argument type="service" id="sulu.content.structure_manager" />
            <argument type="service" id="sulu.util.node_helper" />
            <argument>%sulu_search.page_index_name%</argument>
            <argument>%sulu_search.snippet_index_name%</argument>
            <argument>%sulu.content.node_names.base%</argument>
            <tag name="kernel.event_listener" event="massive_search.index_rebuild" method="onIndexRebuild" />
        </service>
    </services>
</container>
