<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- collaboration -->
        <service id="sulu_content.collaboration" class="Sulu\Bundle\ContentBundle\Collaboration\CollaborationMessageHandler">
            <argument type="service" id="sulu_websocket.admin.message_builder"/>
            <argument type="service" id="sulu_security.user_repository"/>
            <argument type="service" id="sulu.content.collaboration.entity_cache"/>
            <argument type="service" id="sulu.content.collaboration.connection_cache"/>
            <argument>%sulu.content.collaboration.interval%</argument>
            <argument>%sulu.content.collaboration.threshold%</argument>
            <tag name="sulu.websocket.message.handler" dispatcher="admin" alias="sulu_content.collaboration" />
        </service>
    </services>
</container>
