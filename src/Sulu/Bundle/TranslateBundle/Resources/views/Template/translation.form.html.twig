<style type="text/css">

        /* TODO put css in husky / translate-css-file */

    textarea {
        font-size: inherit !important;
    }

    textarea[readonly] {
        padding: 10px 0;
        overflow: hidden;
    }

    .grey {
        color: grey;
    }

    .m-top-35 {
        margin-top: 35px !important;
    }

    .additional-options {
        background: #f8f8f8;
    }

    .relative {
        position: relative;
    }

    .absolute {
        position: absolute
    }

    .show-options {
        bottom: -5px;
        left: -15px;
    }

    .icon-arrow-right {
        width: 0px;
        height: 0px;
        border-style: solid;
        border-width: 4px 0 4px 6px;
        border-color: transparent transparent transparent #000000;
    }

    .icon-arrow-down {
        width: 0px;
        height: 0px;
        border-style: solid;
        border-width: 6px 4px 0 4px;
        border-color: #000000 transparent transparent transparent;
    }

    .table tbody td {
        vertical-align: top !important;
    }

