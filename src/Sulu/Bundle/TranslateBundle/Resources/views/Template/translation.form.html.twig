</style>

<div class="grid-row m-bottom-20">
    <div class="grid-col-6 pull-left">
        <h1><%= packageName %></h1>
    </div>
    <div class="grid-col-6 pull-right">
        <p class="grid-col-5 align-right m-right-10 bold grey">Language catalogue:</p>

        <div id="languageCatalogue" class="grid-col-6"></div>
    </div>
</div>


<form id="codes-form">

    <div class="grid-row">
        <table class="table" id="codes">

            <thead>
                <tr>
                    <th width="20%">Key</th>
                    <th width="37%">Translation</th>
                    <th width="37%">Suggestion</th>

                    <th width="6%"></th>
                </tr>
            </thead>

            <tbody class="code-item">
                <tr>
                    <td class="relative">
                        <input class="form-element grey code-value" readonly value=""
                               data-validation-unique="name" data-validation-required="true"/>
                        <span class="show-options absolute pointer icon-arrow-right"></span>
                    </td>
                    <td>
                        <textarea class="form-element vertical translation-value" readonly data-validation-max-length="20"></textarea>
                        <small class="grey letter-info">Maximum length: <span class="length-info">20</span></small>
                    </td>
                    <td><p class="grey suggestion-value"></p></td>
                    <td><p class="icon-remove m-left-5 code-remove pointer"></p></td>
                </tr>
                <tr class="additional-options hidden">
                    <td colspan="4">
                        <div class="grid-row">
                            <div class="grid-col-3">
                                <span>Length</span>
                                <input class="form-element length-value" value="20" data-validation-required="true"
                                       data-type="decimal" data-validation-min="0" type="number" min="0"/>
                            </div>
                            <div class="grid-col-2 m-top-35">
                                <input name="frontend" type="checkbox" class="custom-checkbox frontend-value">
                                <span class="custom-checkbox-icon"></span>
                                <span class="m-left-5">Frontend</span>
                            </div>
                            <div class="grid-col-2  m-top-35">
                                <input name="backend" type="checkbox" class="custom-checkbox backend-value">
                                <span class="custom-checkbox-icon"></span>
                                <span class="m-left-5">Backend</span>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>

        </table>


        <div class="grid-row m-top-15 m-bottom-10">
            <div class="grid-col-2" id="code-add">
                <span class="icon-add"></span><span class="control-label">[Add element]</span>
            </div>
        </div>

    </div>

    <hr class="divider"/>

</form>
