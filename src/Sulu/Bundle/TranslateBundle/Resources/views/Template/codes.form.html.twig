<h1>[.DE-English]</h1>

<form id="codes-form">

    <div class="grid-row">
        <h3 class="collapsable">[Section1]</h3>
        <table class="table codes">

            <thead>
                <tr>
                    <th>[Key]</th>
                    <th>[Translation]</th>
                    <th>[Suggestion (EN)]</th>
                </tr>
            </thead>

            <tbody>
                <% _.each(codes, function(item) { %>
                <tr data-id="<%= item.id %>">
                    <td><p><%= item.code %><span class="icon-remove m-left-5"></span><p></span></td>
                    <td>
                        <input class="form-element" value="<%= item.translations[0].value %>"/>
                        <small>[Max. 128 chars]</small>
                    </td>
                    <td><p>[Lorem Ipsum dolor set]</p></td>
                </tr>
                <% }); %>
            </tbody>

        </table>


        <div class="grid-row m-top-15 m-bottom-10" data-table-id="catalogueTable" id="addCodeRow">
            <div class="grid-col-2">
                <span class="icon-add"></span><span class="control-label">[Add element]</span>
            </div>
            <div class="grid-col-2">
                <input type="submit" value="[Speichern]"/>
            </div>
        </div>

    </div>

    <hr/>



</form>