<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sulu.cache.event_listener.content_node.class">Sulu\Component\Cache\EventListener\ContentNodeListener</parameter>
        <parameter key="sulu.cache.cache_manager.class">Sulu\Component\Cache\CacheManager</parameter>
    </parameters>

    <services>

        <!-- content node event listener -->
        <service id="sulu.cache.event_listener.content_node" class="%sulu.cache.event_listener.content_node.class%">
            <tag name="kernel.event_listener" event="sulu.content.node.save" method="onContentNodeSave"/>
            <argument type="service" id="sulu.cache.cache_manager"/>
        </service>

        <!-- cache manager -->
        <service id="sulu.cache.cache_manager" class="%sulu.cache.cache_manager.class%">
            <argument type="service" id="logger"/>
        </service>

    </services>

</container>
