<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sulu_core.list_rest_helper.class">Sulu\Component\Rest\Listing\ListRestHelper</parameter>
        <parameter key="sulu_core.rest.list_builder.list_rest_helper.class">Sulu\Component\Rest\ListBuilder\ListRestHelper</parameter>
        <parameter key="sulu_core.rest.list_builder.doctrine_list_builder_factory.class">Sulu\Component\Rest\ListBuilder\DoctrineListBuilderFactory</parameter>
    </parameters>

    <services>
        <service id="sulu_core.list_rest_helper" class="%sulu_core.list_rest_helper.class%" scope="request">
            <argument type="service" id="request"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="sulu_core.rest.list_builder.list_rest_helper" class="%sulu_core.rest.list_builder.list_rest_helper.class%" scope="request">
            <argument type="service" id="request"/>
        </service>
        <service id="sulu_core.rest.list_builder.doctrine_list_builder_factory" class="%sulu_core.rest.list_builder.doctrine_list_builder_factory.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
    </services>
</container>
